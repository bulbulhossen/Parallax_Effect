<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bydavy.parallax.app.MainActivity">


    <com.bulbulhossen.newdesgin.TrackingScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trona_pinnacles" />


                <include layout="@layout/content" />
            </LinearLayout>


            <!-- Should have a margin top equal to R.id.image's height -->
            <com.bulbulhossen.newdesgin.Bangla_Font
                android:id="@+id/presentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/image_height"
                android:background="@drawable/rectangle"
                android:padding="20dp"
                android:text="ওজন কমাবেন যেভাবেি"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>


    </com.bulbulhossen.newdesgin.TrackingScrollView>


</merge>
